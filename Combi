pipeline {
    agent any
    options {
    timeout(time: 1, unit: 'HOURS')
    }
    stages { 
        stage('Example') {
            steps {
                echo 'Hello World'
            }
        }
    }
}
node {
 	// Clean workspace before doing anything
    deleteDir()

    try {
        stage ('Clone') {
        	checkout scm
        }
	stage ('prebuild') {
	     steps {
	     sh "echo 'consult stakeholders...'"
	     sh "echo 'review requirements etc ...'"
	     sh "echo 'review code early ...'"
	     }
	
	}
	stage ('Build') {
        	sh "echo 'shell scripts to build project...'"
        }
	stage ('Analyse') {
        	sh "echo 'analyse the shell scripts'"
        }
        stage ('Tests') {
	        parallel 'static': {
	            sh "echo 'shell scripts to run static tests...'"
	        },
	        'unit': {
	            sh "echo 'shell scripts to run unit tests...'"
	        },
	        'integration': {
	            sh "echo 'shell scripts to run integration tests...'"
	        }
        }
   	stage ('Deploy') {
            sh "echo 'shell scripts to deploy to server...'"
      	}
    } catch (err) {
        currentBuild.result = 'FAILED'
        throw err
    }
}
