pipeline {
	agent any
	stages {
		stage ('build') {
    environment {
        OUTPUT_PATH = './outputs/'
        }
    steps ('documentation') {
        echo 'mkdir essex' // create a new folder
        echo 'touch essex/rom.txt' // create an empty file
        echo 'touch " header" >>  essex/rom.txt' // put header inside the file
        echo 'touch "footer" >> essex/rom.txt' // put footer inside the file
    }
    steps {
      echo 'test integration'
    }
		}
		stage ('test: integration-&-quality') {
      steps {
        echo 'test integration'
            }

		}
		stage ('test: functional') {
    steps {
      echo 'test functional'
    }
		}
		stage ('test: load-&-security') {
    steps {
      echo 'test load'
    }
		}
		stage ('approval') {
    steps {
      echo 'test approval'
    }
		}
		stage ('deploy:prod') {
    steps {
      sh'''
      rm -rf testfile.json
      '''
      echo 'test deploy'
    }
		}
	}
}
