pipeline {
   agent any

   stages {
      stage('Build') {
         steps {
	    sh 'rm -rf mycar' 
            sh 'mkdir mycar' // create a new folder
            sh 'touch build/web.txt' // create an empty file
            sh 'echo "header" >> mycar/web.txt' // put header inside the file
            sh 'echo "footer" >> mycar/web.txt' // put footer inside the file
            sh 'echo "catpages" >> mycar/web.txt' // put catpages inside the file
         }
      }
      stage('Test') {
            steps {
            input ('do you want to proceed?')
	    sh 'test -f build/web.txt'
            sh 'grep "header" mycar/web.txt'
            sh 'grep "engine" mycar/web.txt'
            sh 'grep "catpages" mycar/web.txt'
         }
      }
      stage('Deploy') {
		steps {
		sh 'grep "header" build/web.txt'
                sh 'grep "footer" mycar/web.txt'
                sh 'grep "catpages" mycar/web.txt'
			}
		}

      stage('Publish') {
          steps {
            input ('do you want to proceed?')
	    archiveArtifacts artifacts: 'mycar/'
          }
      }      
   }
}
