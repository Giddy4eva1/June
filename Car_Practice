pipeline {
   agent any
   options {
   retry(5)
   }
   environment {
   prod = 'hanover'
   }

   stages {
      stage('Build') {
      environment {
      OUTPUT_PATH = './outputs/'
      }
         steps {
            sh 'rm -rf giddyfile'
            sh 'mkdir giddyfile' // create a new folder
            sh 'touch giddyfile/car.txt' // create an empty file
            sh 'echo "chassis" >> giddyfile/car.txt' // put chassis inside the file
            sh 'echo "engine" >> giddyfile/car.txt' // put engine inside the file
            sh 'echo "body" >> giddyfile/car.txt' // put body inside the file
         }
      }
      stage('Test') {
         steps {
            sh 'test -f giddyfile/car.txt'
            sh 'grep "chassis" giddyfile/car.txt'
            sh 'grep "engine" giddyfile/car.txt'
            sh 'grep "body" giddyfile/car.txt'
         }
      }
      stage('Deploy') {
           steps {
           echo 'hello world'
           }   
      }
      stage('Publish') {
          steps {
            archiveArtifacts artifacts: 'giddyfile/'
          }
      }      
   }
}
